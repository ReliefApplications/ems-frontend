{
  "name": "back-office",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/back-office/src",
  "prefix": "oort-front",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/back-office",
        "index": "apps/back-office/src/index.html",
        "main": "apps/back-office/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/back-office/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/back-office/src/favicon.ico",
          "apps/back-office/src/assets"
        ],
        "styles": [
          "apps/back-office/src/styles.scss",
          "libs/safe/src/lib/style/styles.scss",
          "node_modules/survey-angular/survey.min.css",
          "node_modules/survey-creator/survey-creator.min.css",
          "./node_modules/leaflet.markercluster/dist/MarkerCluster.css",
          "./node_modules/leaflet.markercluster/dist/MarkerCluster.Default.css",
          "node_modules/select2/dist/css/select2.min.css"
        ],
        "scripts": [
          "node_modules/jquery/dist/jquery.js",
          "node_modules/select2/dist/js/select2.min.js",
          "node_modules/tinymce/tinymce.js",
          "node_modules/tinymce/themes/silver/theme.js"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "12mb",
              "maximumError": "15mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "6kb",
              "maximumError": "10kb"
            }
          ],
          "outputHashing": "all",
          "stylePreprocessorOptions": {
            "includePaths": [
              "libs/safe/src/lib/style/themes/oort"
            ]
          }
        },
        "oort-local": {
          "fileReplacements": [
            {
              "replace": "apps/back-office/src/environments/environment.ts",
              "with": "apps/back-office/src/environments/environment.oort.local.ts"
            }
          ],
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true,
          "stylePreprocessorOptions": {
            "includePaths": [
              "libs/safe/src/lib/style/themes/oort"
            ]
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true,
          "stylePreprocessorOptions": {
            "includePaths": [
              "libs/safe/src/lib/style/themes/default"
            ]
          }
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "back-office:build:production"
        },
        "oort-local": {
          "browserTarget": "back-office:build:oort-local"
        },
        "development": {
          "browserTarget": "back-office:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "back-office:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/back-office/**/*.ts",
          "apps/back-office/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/back-office/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
