{
  "name": "safe",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/safe/src",
  "prefix": "safe",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/safe/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/safe/**/*.ts", "libs/safe/**/*.html"]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/safe/.storybook",
        "browserTarget": "safe:build-storybook",
        "compodoc": false,
        "styles": ["libs/safe/src/lib/style/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": [
            "libs/styles/src/lib/themes/default",
            "libs/styles/src/lib/kendo"
          ]
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/safe",
        "configDir": "libs/safe/.storybook",
        "browserTarget": "safe:build-storybook",
        "compodoc": false,
        "styles": ["libs/safe/src/lib/style/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": [
            "libs/styles/src/lib/themes/default",
            "libs/styles/src/lib/kendo"
          ]
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": []
}
