{
  "name": "web-widgets",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/web-widgets/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/web-widgets",
        "index": "apps/web-widgets/src/index.html",
        "main": "apps/web-widgets/src/main.ts",
        "polyfills": ["apps/web-widgets/src/polyfills.ts"],
        "tsConfig": "apps/web-widgets/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/web-widgets/src/favicon.ico",
          {
            "glob": "**/*",
            "input": "libs/shared/src/i18n/",
            "output": "/assets/i18n/"
          },
          {
            "glob": "**/*",
            "input": "assets/",
            "output": "/assets/"
          },
          {
            "glob": "**/*",
            "input": "node_modules/tinymce",
            "output": "/tinymce/"
          },
          {
            "glob": "**/*",
            "input": "libs/shared/src/i18n/tinymce/",
            "output": "/tinymce/langs"
          },
          {
            "glob": "**/*",
            "input": "node_modules/leaflet/dist/images/",
            "output": "/assets/"
          }
        ],
        "styles": [
          "apps/web-widgets/src/styles.scss",
          "libs/styles/src/lib/tailwind/tailwind.scss",
          "libs/styles/src/lib/kendo/theme.scss",
          "libs/styles/src/lib/shared/shared.scss",
          "node_modules/survey-core/defaultV2.min.css",
          "node_modules/survey-core/survey.min.css",
          "node_modules/survey-creator-core/survey-creator-core.min.css",
          "node_modules/leaflet.markercluster/dist/MarkerCluster.css",
          "node_modules/leaflet.markercluster/dist/MarkerCluster.Default.css"
        ],
        "scripts": [
          "node_modules/tinymce/tinymce.js",
          "node_modules/tinymce/themes/silver/theme.js"
        ],
        "allowedCommonJsDependencies": [
          "minimatch",
          "hammerjs",
          "subscriptions-transport-ws",
          "zen-observable",
          "lodash",
          "cronstrue",
          "cron-parser",
          "cron-validator",
          "localforage",
          "survey-core",
          "survey-creator-core",
          "survey-angular-ui",
          "fast-sha256",
          "color"
        ]
      },
      "configurations": {
        "azure-uat": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "12mb",
              "maximumError": "15mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "1mb",
              "maximumError": "2mb"
            }
          ],
          "stylePreprocessorOptions": {
            "includePaths": [
              "libs/styles/src/lib/themes/default",
              "apps/web-widgets/src/app/styles"
            ]
          },
          "fileReplacements": [
            {
              "replace": "apps/web-widgets/src/environments/environment.ts",
              "with": "apps/web-widgets/src/environments/environment.azure.uat.ts"
            }
          ],
          "outputHashing": "all"
        },
        "oort-dev": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "12mb",
              "maximumError": "15mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "1mb",
              "maximumError": "2mb"
            }
          ],
          "stylePreprocessorOptions": {
            "includePaths": [
              "libs/styles/src/lib/themes/default",
              "apps/web-widgets/src/app/styles"
            ]
          },
          "fileReplacements": [
            {
              "replace": "apps/web-widgets/src/environments/environment.ts",
              "with": "apps/web-widgets/src/environments/environment.oort.dev.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true,
          "stylePreprocessorOptions": {
            "includePaths": [
              "libs/styles/src/lib/themes/default",
              "apps/web-widgets/src/app/styles"
            ]
          }
        }
      },
      "defaultConfiguration": "oort-dev"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "oort-dev": {
          "browserTarget": "web-widgets:build:oort-dev"
        },
        "development": {
          "browserTarget": "web-widgets:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "web-widgets:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/web-widgets/**/*.ts",
          "apps/web-widgets/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/web-widgets/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
