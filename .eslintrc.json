{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": 0
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "plugins": ["prettier", "jsdoc"],
      "extends": [
        "plugin:@nx/typescript",
        "prettier",
        "plugin:jsdoc/recommended"
      ],
      "rules": {
        "no-case-declarations": 0,
        "@typescript-eslint/no-explicit-any": 0,
        "prettier/prettier": 2,
        "@typescript-eslint/naming-convention": [
          1,
          {
            "selector": ["enumMember"],
            "format": ["camelCase", "UPPER_CASE"]
          }
        ],
        "jsdoc/require-jsdoc": [
          1,
          {
            "exemptEmptyConstructors": false,
            "contexts": [
              "PropertyDefinition",
              "ExportDefaultDeclaration > ArrowFunctionExpression",
              "TSInterfaceDeclaration",
              "TSEnumDeclaration",
              "Program > VariableDeclaration[kind='const']",
              "ExportNamedDeclaration[declaration.kind='const']",
              "MethodDefinition[key.name!=/^ngOn(Init|Destroy|Changes)|ngDoCheck|ngAfter(ContentInit|ContentChecked|ViewInit|ViewChecked)$/]"
            ],
            "require": {
              "ClassDeclaration": true,
              "FunctionDeclaration": true,
              "ClassExpression": true,
              "FunctionExpression": true
            }
          }
        ],
        "jsdoc/require-param-type": 0,
        "jsdoc/require-property-type": 0,
        "jsdoc/require-description": [
          "warn",
          {
            "checkGetters": false
          }
        ],
        "jsdoc/require-returns-type": 0,
        "@typescript-eslint/no-unused-vars": 2,
        "jsdoc/tag-lines": [
          "warn",
          "any",
          {
            "startLines": 1
          }
        ]
        // todo: reactivate using stylistic
        // "lines-between-class-members": [
        //   "error",
        //   "always",
        //   {
        //     "exceptAfterSingleLine": false
        //   }
        // ]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
